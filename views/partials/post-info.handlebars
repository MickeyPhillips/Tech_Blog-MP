<article class="post">
    <div class="title">
        <a href="/post/{{post.id}}">{{title}}</a>
        <p>{{post_text}}</p>
    </div>
    <div class="meta">
        Posted by {{user.username}} on
        {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{format_plural "comment" comments.length}}</a>
    </div>
</article>